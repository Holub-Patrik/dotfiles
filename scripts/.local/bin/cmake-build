#!/bin/bash
bin_folder="build"

clean () {
	rm -rf "$bin_folder"
	rm compile_commands.json
}

get_build_args() {
	declare -A config=()
	
	# default to env var if set, otherwise clang++
	read -p 'C++ compiler to use (CXX|clang++): ' cxx
	config[CXX]=${cxx:-$CXX}
	config[CXX]=${config[CXX]:-clang++}

	# default to env var if set, otherwise clang++
	read -p 'C compiler to use (CC|clang): ' cc
	config[CC]=${cc:-$CC}
	config[CC]=${config[CC]:-clang}

	read -p 'Build type (Release): ' bd_type
	config[BUILD_TYPE]=${bd_type:-Release}

	if [ ${config[BUILD_TYPE]} = "Debug" ]; then
		config[asan]="OFF"
		config[tsan]="OFF"
		config[msan]="OFF"
		config[ubsan]="OFF"

		if [ ${config[msan]} = "OFF" ] && [ ${config[tsan]} = "OFF" ]; then
			read -p 'Do you want to sanitize addresses? [y/N]: ' asan
			asan=${asan:-N}

			if [ $asan = "y" ]; then
				config[asan]="ON"
			fi
		fi

		if [ ${config[asan]} = "OFF" ] && [ ${config[tsan]} = "OFF" ]; then
			read -p 'Do you want to sanitize memory? [y/N]: ' msan
			msan=${msan:-N}

			if [ $msan = "y" ]; then
				config[msan]="ON"
			fi
		fi

		if [ ${config[asan]} = "OFF" ] && [ ${config[msan]} = "OFF" ]; then
			read -p 'Do you want to sanitize threads? [y/N]: ' tsan
			tsan=${tsan:-N}

			if [ $tsan = "y" ]; then
				config[tsan]="ON"
			fi
		fi

		read -p 'Do you want to sanitize undefined behaviour? [y/N]: ' ubsan
		ubsan=${ubsan:-N}

		if [ $ubsan = "y" ]; then
			config[ubsan]="ON"
		fi
	fi

	declare -p config
	
}

build() {
	if [ ! -d "$bin_folder" ]; then
		mkdir build
	fi

	if [ ! -d "$bin_folder/CMakeFiles/" ]; then
		local config_opts
		config_opts=$(get_build_args)
		eval "$config_opts"

		cd "$bin_folder"
		cmake -DCMAKE_BUILD_TYPE=${config[BUILD_TYPE]}\
			-DCMAKE_CXX_COMPILER=${config[CXX]}\
			-DCMAKE_C_COMPILER=${config[CC]}\
			-DCMAKE_EXPORT_COMPILE_COMMANDS=ON\
			-DASAN=${config[asan]}\
			-DTSAN=${config[tsan]}\
			-DMSAN=${config[msan]}\
			-DUBSAN=${config[ubsan]}\
			..
		cd ..
		ln -sf "$bin_folder"/compile_commands.json compile_commands.json
	fi

	make -C $bin_folder
}

rebuild() {
	if [ ! -d "$bin_folder" ]; then
		mkdir build
	fi

	local config_opts
	config_opts=$(get_build_args)
	eval "$config_opts"

	cd "$bin_folder"
	cmake -DCMAKE_BUILD_TYPE=${config[BUILD_TYPE]}\
		-DCMAKE_CXX_COMPILER=${config[CXX]}\
		-DCMAKE_C_COMPILER=${config[CC]}\
		-DCMAKE_EXPORT_COMPILE_COMMANDS=ON\
		..
	cd ..
	ln -sf "$bin_folder"/compile_commands.json compile_commands.json

	make -C $bin_folder
}

run() {
	./"$bin_folder"/"$1" ${@:2}
}

for char in $(echo $1 | sed -e 's/\(.\)/\1\n/g'); do
	if [ "$char" = "c" ]; then
		clean
	fi

	if [ "$char" = "n" ]; then
		rebuild
	fi

	if [ "$char" = "b" ]; then
		build
		echo ""
	fi

	if [ "$char" = "r" ]; then
		if [ ! -f "$bin_folder/$2" ]; then
			build
		fi
		
		run ${@:2}
	 fi
done

if [ "$1" = "h" ]; then
	echo "./build.sh <what to do> <folder to use>"
	echo "<what to do>"
	echo "b = build"
	echo "r = run"
	echo "br | rb = build & run"
	echo "c = clean"
	echo "<folder to use>"
	echo "data/<folder to use>/[mereni.csv & stanice.csv]"
fi
